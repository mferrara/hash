{
    "name": "legitphp/hash",
    "description": "A performance-oriented PHP package for image hashing algorithms using VIPS.",
    "keywords": [
        "legitphp",
        "hash",
        "image",
        "perceptual-hash",
        "phash",
        "vips",
        "libvips",
        "image-processing",
        "image-comparison",
        "image-similarity",
        "hamming-distance"
    ],
    "homepage": "https://github.com/legitphp/hash",
    "license": "MIT",
    "authors": [
        {
            "name": "Mike Ferrara",
            "email": "mferrara@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "jcupitt/vips": "^2.5"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "LegitPHP\\Hash\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LegitPHP\\Hash\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
